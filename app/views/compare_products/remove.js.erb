<% if @deleted_product %>
var product_id = <%= @deleted_product.id %>
onRemoveCompareProduct(product_id);
<% end %>

<% notice = flash.delete(:notice)
if notice %>
  var notice = "<%= notice %>";
  onCompareProductNotice(notice);
<% end
error = flash.delete(:error)
if error %>
  var error = "<%= error %>";
  onCompareProductError(error);
<% end %>